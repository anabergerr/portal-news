<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:id="@+id/item_stock_name"
            android:layout_width="102dp"
            android:layout_height="25dp"
            android:layout_marginTop="84dp"
            android:text="name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_stock_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simbolo "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3"
            tools:layout_editor_absoluteX="29dp" />

        <TextView
            android:id="@+id/item_stock_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$10,00"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="121dp" />

        <TextView
            android:id="@+id/item_stock_variation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="variacao"
            android:textAlignment="viewEnd"
            android:textColor="@color/negative_variation"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="139dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>